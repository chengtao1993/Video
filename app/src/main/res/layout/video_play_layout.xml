<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/close_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_video"
        android:layout_marginTop="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"/>
    <TextView android:id="@+id/data_source"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="本地"
        android:textSize="36dp"
        android:textColor="#ffffff"
        android:layout_marginTop="80dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:gravity="center_vertical"/>
    <LinearLayout android:id="@+id/video_container"
        android:layout_width="1080dp"
        android:layout_height="810dp"
        android:layout_marginTop="165dp"
        android:gravity="center">
        <VideoView android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bg_process"
        android:layout_marginTop="995dp">
        <TextView android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#00dfff"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="28dp"/>
        <SeekBar android:id="@+id/seek"
            android:layout_width="1020dp"
            android:layout_height="90dp"
            android:thumb="@drawable/thumb"
            android:progressDrawable="@drawable/seekbar"/>
        <TextView android:id="@+id/time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="28dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1100dp"
        android:background="@drawable/bg_controll"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical">
        <ImageView android:id="@+id/videoplaystate"
            android:layout_width="70dp"
            android:layout_weight="13"
            android:layout_height="wrap_content"
            android:src="@drawable/videoplaystate"/>
        <ImageView android:id="@+id/rewind"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/rewind"/>
        <ImageView android:id="@+id/last"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/lastsong"/>
        <ImageView android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/nextsong"/>
        <ImageView android:id="@+id/fastforward"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/fastforward"/>
    </LinearLayout>


</FrameLayout>