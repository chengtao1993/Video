<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/video_container"
        android:background="#00ff00"
        android:layout_width="1080dp"
        android:layout_height="810dp"
        android:gravity="center">
        <VideoView android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bg_process"
        android:layout_marginTop="795dp">
        <TextView android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#00dfff"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="28dp"/>
        <SeekBar android:id="@+id/seek"
            android:layout_width="1020dp"
            android:layout_height="90dp"
            android:thumb="@drawable/thumb"
            android:progressDrawable="@drawable/seekbar"/>
        <TextView android:id="@+id/time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="28dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="900dp"
        android:background="@drawable/bg_controll"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical">
        <ImageView android:id="@+id/videoplaystate"
            android:layout_width="70dp"
            android:layout_weight="13"
            android:layout_height="wrap_content"
            android:src="@drawable/videoplaystate"/>
        <ImageView android:id="@+id/rewind"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/rewind"/>
        <ImageView android:id="@+id/last"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/lastsong"/>
        <ImageView android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/nextsong"/>
        <ImageView android:id="@+id/fastforward"
            android:layout_width="70dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:src="@drawable/fastforward"/>
    </LinearLayout>


</FrameLayout>